# Unified environment examples
# Public site base URL (protocol + domain, no trailing slash)
SITE_BASE_URL=https://noblog.nodove.com

# Vite-exposed variables (frontend)
VITE_SITE_BASE_URL=https://noblog.nodove.com

# Blog Admin (dashboard) variables
ADMIN_PUBLIC_SITE_URL=https://noblog.nodove.com
ADMIN_BACKEND_URL=http://blog-admin-backend:5000
ADMIN_FRONTEND_PORT=3001
ADMIN_BACKEND_PORT=5000
ADMIN_NGINX_HTTP_PORT=8081
ADMIN_NGINX_HTTPS_PORT=8443
ADMIN_SERVER_NAME=localhost
ADMIN_BACKEND_UPSTREAM_HOSTPORT=blog-admin-backend:5000
ADMIN_FRONTEND_UPSTREAM_HOSTPORT=blog-admin-frontend:3000
ADMIN_POSTS_DIR=

# --- Serverless APIs & Living Archive ---
# Gemini: used by /api/summarize
GEMINI_API_KEY=

# GitHub: used by /api/propose-new-version and /api/archive/comments
GITHUB_TOKEN=
GITHUB_REPO=owner/repo
GITHUB_DEFAULT_BRANCH=main
GIT_USER_NAME=vercel-bot
GIT_USER_EMAIL=vercel-bot@local

# Firebase Admin: used by /api/comments/* and /api/archive/comments
# Provide a single-line, minified JSON string for the service account
# Example: FIREBASE_SERVICE_ACCOUNT_JSON={"project_id":"...","client_email":"...","private_key":"-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n"}
FIREBASE_SERVICE_ACCOUNT_JSON=

# Vercel deploy hook: called after archiving to rebuild static pages
VERCEL_DEPLOY_HOOK_URL=
