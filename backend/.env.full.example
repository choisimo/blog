# =============================================================================
# Environment Variables for Blog Backend Full Stack
# =============================================================================
#
# Copy this to .env and update the values
# =============================================================================

# ============================
# POSTGRESQL (n8n Database)
# ============================
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=n8n_secure_password_change_me

# ============================
# REDIS (n8n Queue)
# ============================
REDIS_PASSWORD=redis_secure_password_change_me

# ============================
# N8N (Workflow Engine)
# ============================
N8N_USER=admin
N8N_PASS=n8n_secure_password_change_me
N8N_ENCRYPTION_KEY=change_this_to_a_random_string_min_32_characters_long
N8N_WEBHOOK_URL=http://localhost:5678
N8N_HOST=localhost
N8N_API_KEY=
N8N_WORKER_REPLICAS=2

# ============================
# AI PROVIDERS (n8n nodes)
# ============================
OPENAI_API_KEY=sk-...
GOOGLE_API_KEY=AIza...
ANTHROPIC_API_KEY=sk-ant-...

# ============================
# AI ENGINE (opencode-serve)
# ============================
ADMIN_JWT_SECRET=jwt_secret_change_me_in_production
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin_secure_password_change_me

# ============================
# BLOG API
# ============================
APP_ENV=production
AI_PROVIDER=n8n
AI_DEFAULT_MODEL=gemini-1.5-flash
N8N_BASE_URL=http://n8n:5678
BUFFER_ZONE_URL=http://ai-admin:7080
CHROMADB_URL=http://chromadb:8000

# ============================
# OPENCODE SERVE PATH
# ============================
# Update this to point to your opencode-serve directory
OPENCODE_SERVE_PATH=../secret-documentations/opencode-serve

# ============================
# OPTIONAL SERVICES
# ============================
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=
