# =============================================================================
# Blog + n8n Workflow Integration Environment Variables
# =============================================================================
# Copy this to .env and fill in your values

# =============================================================================
# APPLICATION
# =============================================================================
APP_ENV=production
HOST=0.0.0.0
PORT=5080
TRUST_PROXY=1
LOG_LEVEL=info

# URLs
SITE_BASE_URL=https://noblog.nodove.com
API_BASE_URL=https://api.nodove.com
ALLOWED_ORIGINS=https://noblog.nodove.com,https://api.nodove.com

# =============================================================================
# DATABASE - PostgreSQL (Shared by Blog API + n8n)
# =============================================================================
POSTGRES_DB=blog
POSTGRES_USER=bloguser
POSTGRES_PASSWORD=change-this-secure-password

# =============================================================================
# CACHE & QUEUE - Redis
# =============================================================================
REDIS_PASSWORD=change-this-secure-password

# =============================================================================
# DOCUMENT STORE - MongoDB
# =============================================================================
MONGO_USER=mongouser
MONGO_PASSWORD=change-this-secure-password
MONGO_DB=blog

# =============================================================================
# VECTOR DATABASE - Qdrant
# =============================================================================
QDRANT_API_KEY=change-this-secure-key

# =============================================================================
# AI CONFIGURATION
# =============================================================================
# AI Provider: 'litellm' (recommended)
AI_PROVIDER=litellm
AI_DEFAULT_MODEL=gpt-4.1

# LiteLLM Gateway
LITELLM_MASTER_KEY=sk-litellm-your-secret-key
LITELLM_BASE_URL=http://litellm:4000

# Provider API Keys (used by LiteLLM)
OPENAI_API_KEY=
GOOGLE_API_KEY=
ANTHROPIC_API_KEY=

# VAS (GitHub Copilot) - auto-generated
VAS_API_KEY=

# Admin JWT Secret
ADMIN_JWT_SECRET=auto-generated-secret-change-in-production
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=

# =============================================================================
# N8N WORKFLOW ENGINE
# =============================================================================
N8N_USER=admin
N8N_PASS=change-this-secure-password
N8N_ENCRYPTION_KEY=your-32-char-encryption-key-here
N8N_API_KEY=

# n8n Production URLs
N8N_WEBHOOK_URL=https://workflow.nodove.com/
N8N_HOST=workflow.nodove.com

# =============================================================================
# AIDOVE WEBHOOKS (n8n Integration)
# =============================================================================
AIDOVE_WEBHOOK_URL=https://workflow.nodove.com/webhook/aidove
AIDOVE_RAG_WEBHOOK_URL=https://workflow.nodove.com/webhook/aidove-rag
AIDOVE_API_KEY=
AIDOVE_WEBHOOK_TIMEOUT=120000

# =============================================================================
# FIRECRAWL (Web Scraping)
# =============================================================================
FIRECRAWL_API_TOKEN=firecrawl-token

# =============================================================================
# OBJECT STORAGE - MinIO
# =============================================================================
MINIO_USER=minioadmin
MINIO_PASSWORD=change-this-secure-password

# =============================================================================
# CLOUDFLARE (D1 / R2)
# =============================================================================
CF_ACCOUNT_ID=your-account-id
CF_API_TOKEN=your-api-token
D1_DATABASE_ID=your-d1-database-id
R2_BUCKET_NAME=blog
R2_ASSETS_BASE_URL=https://assets-b.nodove.com

# =============================================================================
# GITHUB (for Admin PR creation)
# =============================================================================
GITHUB_TOKEN=
GITHUB_REPO_OWNER=choisimo
GITHUB_REPO_NAME=blog
GIT_USER_NAME=CI Bot
GIT_USER_EMAIL=ci@example.com

# =============================================================================
# ADMIN AUTH
# =============================================================================
ADMIN_BEARER_TOKEN=
JWT_SECRET=
ADMIN_USERNAME=
ADMIN_PASSWORD=

# =============================================================================
# TERMINAL SERVER
# =============================================================================
ORIGIN_SECRET_KEY=default-secret-change-me
SANDBOX_IMAGE=alpine:latest

# =============================================================================
# MONITORING (Optional - enable with --profile monitoring)
# =============================================================================
GRAFANA_PASSWORD=grafanapass

# =============================================================================
# DB ADMIN (Optional - enable with --profile admin)
# =============================================================================
PGADMIN_EMAIL=admin@nodove.com
PGADMIN_PASSWORD=adminpass
