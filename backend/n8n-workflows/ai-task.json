      "main": [[{ "node": "Switch by Mode", "type": "main", "index": 0 }]]
    },
    "Switch by Mode": {
      "main": [
        [{ "node": "Sketch Prompt", "type": "main", "index": 0 }],
        [{ "node": "Prism Prompt", "type": "main", "index": 0 }],
        [{ "node": "Chain Prompt", "type": "main", "index": 0 }],
        [{ "node": "Summary Prompt", "type": "main", "index": 0 }],
        [{ "node": "Gemini Call", "type": "main", "index": 0 }]
      ]
