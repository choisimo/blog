      "id": "build-opencode-request",
      "name": "Build OpenCode Request",
      "type": "n8n-nodes-base.set",
      "typeVersion": 3.4,
      "position": [1140, 300]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "={{ ($env.OPENCODE_BASE_URL || 'http://opencode-backend:7016') + '/chat' }}",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            { "name": "Content-Type", "value": "application/json" }
          ]
        },
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"message\": {{ JSON.stringify($json.message) }},\n  \"providerID\": {{ JSON.stringify($json.providerID) }},\n  \"modelID\": {{ JSON.stringify($json.modelID) }},\n  \"title\": {{ JSON.stringify($json.title) }}\n}",
        "options": { "timeout": 180000, "response": { "response": { "fullResponse": true } } }
      },
      "id": "opencode-chat",
      "name": "OpenCode Chat",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [1360, 300]
    },
    {
      "parameters": {
        "jsCode": "const text = $input.first().json.body?.response?.text || '';\nconst mode = $('Set Parameters').first().json.mode;\n\nlet data = null;\ntry {\n  data = JSON.parse(text);\n} catch {\n  const fence = text.match(/```(?:json)?\\s*([\\s\\S]*?)```/i);\n  if (fence?.[1]) {\n    try { data = JSON.parse(fence[1].trim()); } catch {}\n  }\n  if (!data) {\n    const start = text.indexOf('{');\n    const end = text.lastIndexOf('}');\n    if (start >= 0 && end > start) {\n      try { data = JSON.parse(text.slice(start, end + 1)); } catch {}\n    }\n  }\n}\n\nif (!data) {\n  if (mode === 'summary') {\n    data = { summary: text };\n  } else if (mode === 'sketch') {\n    data = { mood: 'curious', bullets: ['Unable to parse response'] };\n  } else if (mode === 'prism') {\n    data = { facets: [{ title: '요약', points: [text.slice(0, 200)] }] };\n  } else if (mode === 'chain') {\n    data = { questions: [{ q: '추가 질문 생성 실패', why: '' }] };\n  } else {\n    data = { text };\n  }\n}\n\nreturn { json: { ok: true, data, mode, source: 'opencode' } };"
      },
      "id": "parse-response",
      "name": "Parse Response",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [1580, 300]
    },
