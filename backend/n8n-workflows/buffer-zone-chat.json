    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={\n  \"success\": true,\n  \"sessionId\": {{ JSON.stringify($json.sessionId) }},\n  \"output\": {{ JSON.stringify($json.message) }},\n  \"modelId\": {{ JSON.stringify($json.modelId) }},\n  \"providerId\": {{ JSON.stringify($json.providerId) }}\n}",
        "options": {
          "responseCode": 200,
