{
  "name": "blog-api-gateway",
  "version": "2.0.0",
  "private": true,
  "description": "Unified Cloudflare Worker API Gateway for Blog (D1, R2, KV, Cron)",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:prod": "wrangler deploy --env production",
    "deploy:staging": "wrangler deploy --env staging",
    "tail": "wrangler tail",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "migrations:apply": "wrangler d1 migrations apply blog-db --local",
    "migrations:apply:prod": "wrangler d1 migrations apply blog-db-prod --env production --remote"
  },
  "dependencies": {
    "@blog/shared": "file:../../shared",
    "hono": "^4.6.14",
    "jose": "^6.1.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/node": "^22.10.2",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "wrangler": "^4.54.0"
  }
}
